<%- include('./partials/header.ejs') %>

<div class="container">
  <div class="row">
    <div class="col-sm-6 mt-5">
      <h2 class="alert alert-success text-center">Add new student</h2>
      <form action="" method="post">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <!-- data coming from db and passin to edit page -->
          <input type="text" class="form-control" id="name" name="name" />
        </div>

        <div class="mb-3">
          <label for="age" class="form-label">age</label>
          <input type="text" class="form-control" id="age" name="age" />
        </div>
        <div class="mb-3">
          <label for="fee" class="form-label">fee</label>
          <input type="text" class="form-control" id="fee" name="fee" />
        </div>
        <div class="mb-3">
          <label for="fee" class="form-label">image</label>
          <input type="file" class="form-control" id="image" name="image" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
    <div class="col-sm-6 mt-5">
      <h2 class="alert alert-danger text-center">List of Students</h2>
      <%# show a data %>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Fee</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% let i=1 %> <% data.forEach((item) =>{ %>
          <tr>
            <td><%= i++ %></td>
            <td><%= item.name %></td>
            <td><%= item.age %></td>
            <td><%= item.fee %></td>
            <td>
              <form
                action="/edit/<%= item._id %>"
                method="get"
                class="d-inline"
              >
                <button type="submit">
                  <i
                    class="fa fa-edit"
                    style="font-size: 24px; color: blue"
                  ></i>
                </button>
              </form>

              <form
                action="/delete/<%= item._id %>"
                method="post"
                class="d-inline"
              >
                <button type="submit">
                  <i
                    class="fa fa-close"
                    style="font-size: 24px; color: red"
                  ></i>
                </button>
              </form>
            </td>
          </tr>

          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%- include('./partials/footer.ejs') %>
