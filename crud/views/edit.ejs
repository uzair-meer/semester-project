<%- include('./partials/header.ejs') %>

<div class="container">
  <div class="row">
    <div class="col-sm-6 mt-5">
      <h2 class="alert alert-success text-center">Update student</h2>
      <form action="/update/<%= data._id%>" method="post">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            value="<%= data.name %>"
          />
        </div>

        <div class="mb-3">
          <label for="age" class="form-label">age</label>
          <input
            type="text"
            class="form-control"
            id="age"
            name="age"
            value="<%= data.age %>"
          />
        </div>
        <div class="mb-3">
          <label for="fee" class="form-label">fee</label>
          <input
            type="text"
            class="form-control"
            id="fee"
            name="fee"
            value="<%= data.fee %>"
          />
        </div>
        <button type="submit" class="btn btn-warning">Update</button>
        <button type="submit" class="btn btn-secondary">Go back Home</button>
      </form>
    </div>
  </div>
</div>
<%- include('./partials/footer.ejs') %>
